[credential]
	helper = cache --timeout=360000

[alias]

	# Aliases
	unadd = reset HEAD
	purr = pull --rebase
	pur = pull --rebase
	all = commit -a
	stache = stash

	# Shorthands
	l = log --graph --pretty=format:'%C(red)%h %C(magenta reverse)%s%Creset%C(cyan)%d %C(white)%an, %ar%Creset'
	difflog = log -p --stat
	s = status --short
	d = diff
	br = branch
	bra = branch -a

	# Typos
	ad = add
	statu = status
