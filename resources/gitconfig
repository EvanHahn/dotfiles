[alias]

	# aliases
	unadd = reset HEAD
	pur = pull --rebase
	purr = pull --rebase
	all = commit -a -v
	newbr = checkout -b
	rmbranch = branch -D
	find = !"git ls-files | grep "
	rmd = "!for f in $(git status | grep deleted | awk '{print $3}'); do git rm $f; done"

	# shorthands
