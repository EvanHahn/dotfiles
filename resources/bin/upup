#!/usr/bin/env bash
set -e

if [[ "$(uname -s)" == 'Darwin' ]]; then

  softwareupdate -ia

  brew update
  brew upgrade --all

  gem update

elif [[ "$(uname -s)" == 'Linux' ]]; then

  sudo apt-get update
  sudo apt-get upgrade -y

  sudo gem update

fi

npm --silent --global update

vim -e +NeoBundleUpdate +qall

if [[ "$(uname -s)" == 'Darwin' ]]; then
  brew cleanup
  brew prune
  brew cask cleanup
fi
