#!/usr/bin/env bash
set -e

if [[ "$(uname -s)" == 'Darwin' ]]; then

  softwareupdate -ia

  brew update
  brew upgrade --all

elif [[ "$(uname -s)" == 'Linux' ]]; then

  sudo apt-get update
  sudo apt-get upgrade -y

fi

gem update

npm --silent --global update

vim +NeoBundleUpdate +qall

if [[ "$(uname -s)" == 'Darwin' ]]; then
  brew cleanup
  brew prune
  brew cask cleanup
fi
