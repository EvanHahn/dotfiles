{
    // stop fetching stuff from the internet
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    "update.enableWindowsBackgroundUpdates": false,
    "extensions.showRecommendationsOnlyOnDemand": true,
    // visuals
    "workbench.colorTheme": "Monokai",
    "workbench.colorCustomizations": {
      "editor.background": "#000000",
      "terminal.foreground": "#ffffff",
      "terminal.background": "#000000",
      "terminal.ansiBlack": "#000000",
      "terminal.ansiRed": "#ff3333",
      "terminal.ansiGreen": "#009900",
      "terminal.ansiYellow": "#ff9900",
      "terminal.ansiBlue": "#6699ff",
      "terminal.ansiMagenta": "#ff0099",
      "terminal.ansiCyan": "#00ffff",
      "terminal.ansiWhite": "#999999",
      "terminal.ansiBrightBlack": "#777777",
      "terminal.ansiBrightRed": "#ff3333",
      "terminal.ansiBrightGreen": "#00ff00",
      "terminal.ansiBrightYellow": "#ffee00",
      "terminal.ansiBrightBlue": "#0099ff",
      "terminal.ansiBrightMagenta": "#ff00ff",
      "terminal.ansiBrightCyan": "#00ffff",
      "terminal.ansiBrightWhite": "#ffffff"
    },
    "editor.fontSize": 18,
    "editor.fontFamily": "Inconsolata, Consolas, Monaco, monospace",
    "terminal.integrated.fontSize": 18,
    "editor.roundedSelection": false,
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "workbench.iconTheme": "vs-seti",
    "workbench.statusBar.feedback.visible": false,
    "workbench.tips.enabled": false,
    "workbench.editor.showIcons": true,
    "workbench.editor.tabSizing": "shrink",
    "editor.renderIndentGuides": true,
    // editor
    "workbench.startupEditor": "none",
    "editor.tabSize": 2,
    "editor.scrollBeyondLastLine": false,
    "editor.dragAndDrop": false,
    "editor.autoClosingBrackets": "never",
    "keyboard.touchbar.enabled": false,
    // terminal
    "terminal.external.osxExec": "Alacritty.app",
    // "autocmds"
    "editor.formatOnSave": false,
    "files.trimTrailingWhitespace": true,
    "update.showReleaseNotes": false,
    // file explorer
    "explorer.confirmDelete": false,
    // files
    "workbench.editor.enablePreview": false,
    "explorer.openEditors.visible": 0,
    // git
    "git.promptToSaveFilesBeforeCommit": true,
    "git.enableSmartCommit": true,
    // node
    "npm.enableScriptExplorer": true,
    "debug.node.autoAttach": "on",
    "npm.fetchOnlinePackageInfo": false,
    // css
    "css.lint.duplicateProperties": "warning",
    "css.lint.float": "warning",
    "css.lint.zeroUnits": "warning",
    // html
    "html.autoClosingTags": false,
    "html.format.wrapLineLength": 0,
  }
