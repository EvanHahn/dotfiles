[alias]
  # aliases
  all = commit -a -v
  commitcount = rev-list HEAD --count
  difflog = log -p --stat
  pur = pull --rebase
  purr = pull --rebase
  remotes = remote -v
  staged = diff --cached
  unadd = reset HEAD
  sha = log -n 1 --pretty=format:'%H'
  whoami = !git config user.name && git config user.email

  # shorthands
