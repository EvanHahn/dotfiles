#!/usr/bin/env python3
import argparse
import secrets

parser = argparse.ArgumentParser(description="Generate random digits")
parser.add_argument(
    "num_digits",
    type=int,
    nargs="?",
    default=10,
    help="Number of random digits to generate",
)
args = parser.parse_args()

random_digits = "".join(secrets.choice("0123456789") for _ in range(args.num_digits))
print(random_digits)
