" 10 things in the list

set maxitems=10

" status bar

set status=input,ssl,location,bookmark
set showstatuslinks=1

" open vimperator stuff in new tabs

set newtab=all

" hints

set hintchars=fdsajkl;rcexumi
set hintinputs=''

" duckduckgo

set defsearch=duckduckgo

" autocomplete with smart Firefox stuff and open tabs

set complete=lt

" J and K for tab movement

nnoremap J gt
nnoremap K gT

" scroll faster

nnoremap j 3j
nnoremap k 3k
nnoremap h 3h
nnoremap l 3l

" nop some stuff

nnoremap ~ <Nop>

" ignorekeys

ignorekeys clear

" theming
" =======

" overall

hi Normal background: #151515; color: #d0d0d0; font-family: Inconsolata, Consolas, Monaco, monospace; font-size: 16px;

" command line

hi CmdLine background: #151515; color: #d0d0d0;
hi CmdLine>* font-family: Inconsolata, Consolas, Monaco, monospace; font-size: 16px;
hi ContentSeparator border-top: 1px solid #303030; display: -moz-box;
hi Prompt nothing: yes;
hi StatusLine background: #151515; color: #b0b0b0; font-family: -apple-system, sans-serif; font-size: 8pt; margin-top: 3px;

hi Question color: #d0d0d0; background: #505050; padding: 0 0.5em;
hi PromptText color: #d0d0d0; background: #505050; padding: 0 0.5em;

hi ErrorMsg color: #ac4142;
hi InfoMsg color: #90A959;
hi ModeMsg padding: 0 0.5em; color: #f5f5f5; background: #505050;
hi MoreMsg padding: 0 0.5em; color: #f5f5f5; background: #505050;
hi WarningMsg color: #ac4142;

" the bar that pops up

hi CmdOutput background: #303030; color: #f5f5f5; font-family: Inconsolata, Consolas, Monaco, monospace; font-size: 16px;
hi CompIcon padding: 0.5em; margin-right: 0.8em;
hi CompItem[selected] color: #f5f5f5; background: #505050;
hi CompTitle padding: 0 1em; background: #303030;
hi CompTitle>* color: #f5f5f5; padding: 0.5em; font-size: 16px; text-transform: lowercase;
hi Filter background: #d28845;
hi NonText color: #505050;
hi URL color: #75b5aa;

" hints

hi Hint font-size: 12px; font-family: Avenir, Ubuntu, sans-serif; padding: 0 0.6em; text-transform: uppercase; color: #f5f5f5; background-color: rgb(172,65,66); border: 1px solid #000; z-index: 9999999;
hi HintActive color: #f5f5f5; text-shadow: none; background-color: #aa759f;
hi HintElem color: #f5f5f5; text-shadow: none; background-color: #6a9fb5;

" help

hi Help background-color: #202020; color: #d0d0d0; font-family: Inconsolata, Consolas, Monaco, monospace; font-size: 16px;
hi HelpArg color: #6699cc;
hi HelpBorder border-color: #d3d0c8; border-width: 0px; border-style: solid;
hi HelpEx display: inline-block; color: #6699cc; font-weight: bold;
hi HelpHead display: block; margin: 1em 0; padding-bottom: .2ex; border-bottom-width: 1px; font-size: 2em; font-weight: bold; color: #6699cc; clear: both;
hi HelpInfoLabel display: inline-block; width: 6em;  color: #cc99cc; font-weight: bold; vertical-align: text-top;
hi HelpKey color: #e8e6df;
hi HelpLink color: #66cccc; text-decoration: none;
hi HelpNote color: #f2777a; font-weight: bold;
hi HelpOpt color: #99cc99;
hi HelpOptionalArg color: #6699cc;
hi HelpSpec display: block; margin-left: -10em; float: left; clear: left; color: #cc99cc;
hi HelpString display: inline-block; color: #99cc99; font-weight: normal; vertical-align: text-top;
hi HelpSubhead display: block; margin: 1em 0; padding-bottom: .2ex; border-bottom-width: 1px; font-size: 1.2em; font-weight: bold; color: #6699cc; clear: both;
hi HelpSubsubhead display: block; margin: 1em 0; padding-bottom: .2ex; font-size: 1.1em; font-weight: bold; color: #6699cc; clear: both;
hi HelpTag display: inline-block; color: #515151; margin-left: 1ex; font-size: 0.65em; font-weight: bold;
hi HelpTopic color: #e8e6df;
hi HelpWarning color: #f2777a; font-weight: bold;

" pageinfo

hi Title display: block; padding: 0.5em; background: #303030; text-transform: lowercase;
