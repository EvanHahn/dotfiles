  word_wrap = yes
  bounce_freq = 0

  ignore_newline = no

  geometry = "300x5-5+5"

  shrink = no

  transparency = 10

  idle_threshold = 30

  follow = keyboard

  sticky_history = yes

  history_length = 20

  show_indicators = yes

  separator_height = 2

  padding = 8
  horizontal_padding = 16

  separator_color = frame

  icon_position = off

[frame]
  width = 0

