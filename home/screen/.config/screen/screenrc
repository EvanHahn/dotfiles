startup_message off

autodetach on

# allow bold and 256 colors
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

# clear background
defbce "on"

defscrollback 1000

hardstatus alwayslastline
hardstatus string '%{= kw} %?%-Lw%?%{r}%n*%f%t%?(%u)%?%{r}%{w}%?%+Lw%?%?%= %{g}%{B} %{w}%C%a '
