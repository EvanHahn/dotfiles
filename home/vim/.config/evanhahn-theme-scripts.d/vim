#!/usr/bin/env bash
set -e
set -u
set -o pipefail

is_light="$(echo "$1" '>' .5 | bc)"

XDG_CACHE_HOME=${XDG_CACHE_HOME:-$HOME/.cache}
mkdir -p "$XDG_CACHE_HOME"
theme_path="$XDG_CACHE_HOME/evanhahn-vim-theme.vim"

echo '" This is an auto-generated file.' > "$theme_path"

if [ "$is_light" -eq 1 ]; then
  termguicolors=''
  colorscheme=one
  background=light
else
  termguicolors=no
  colorscheme=evanhahn
  background=dark
fi

echo "\" This is an auto-generated file.

if has('termguicolors')
  set ${termguicolors}termguicolors
endif

colorscheme $colorscheme
set background=$background" >> "$theme_path"
