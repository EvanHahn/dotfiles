" "plugins"

set NERDTree

" ui components

set number
set relativenumber
set showcmd
set visualbell

" searching

set ignorecase
set smartcase
set hlsearch
set gdfault
set incsearch

" scrolling

set scrolloff=4
set sidescroll=1
set sidescrolloff=15
set nowrapscan

" ctrl-a, ctrl-x

set nrformats=hex

" IdeaVim

set ideastatusicon=disabled

# re-mappings

let mapleader=" "

nnoremap Y y$
nnoremap 0 ^
nnoremap H ^
nnoremap L $
nnoremap vv 0v$

nnoremap <Leader><Leader> :noh<CR>:w<CR>

cnoremap W<CR> :w<CR>
cnoremap Wa<CR> :wa<CR>
cnoremap Q<CR> :q<CR>
cnoremap Qa<CR> :qa<CR>

nnoremap Q <nop>
nnoremap K <nop>
nnoremap ZZ <nop>
nnoremap ZQ <nop>
