# start stuff

exec --no-startup-id redshift
exec --no-startup-id SpiderOakONE --headless
exec --no-startup-id dunst
exec --no-startup-id sh "$XDG_CONFIG_HOME/fehbg"
# exec --no-startup-id xautolock -time 60 -locker 'i3lock --color=181818 --ignore-empty-password' -detectsleep -killer 'systemctl suspend' -killtime 2

# define up, down, left, right

set $down j
set $left h
set $right l
set $up k

# mod is Meta key

set $mod Mod4

# quit and restart i3

bindsym $mod+Shift+q exec "i3-nagbar --font 'pango: Lato 12' -t warning -m 'quit i3?' -b 'yes' 'i3-msg exit'"
bindsym $mod+Shift+r restart

# locking

bindsym $mod+Shift+l exec sh "$XDG_CONFIG_HOME/i3locker"

# quit the app

bindsym $mod+q kill

# start some programs

bindsym $mod+Return exec urxvt -bg black -fg white -fn 'xft:Inconsolata:pixelsize=18' +sb -bc -uc -e tmux -u2 -f "$XDG_CONFIG_HOME/tmux/tmux.conf"
bindsym $mod+space exec rofi -show drun
bindsym $mod+Shift+space exec rofi -show window
bindsym Print exec --no-startup-id scrot "$HOME/Desktop/%F-%I_%M%P.png" --multidisp

# move around

bindsym $mod+$down focus down
bindsym $mod+$left focus left
bindsym $mod+$right focus right
bindsym $mod+$up focus up

# workspaces

set $workspace1 "      1      "
set $workspace2 "      2      "
set $workspace3 "      3      "
set $workspace4 "      4      "
set $workspace5 "      5      "
set $workspace6 "      6      "
set $workspace7 "      7      "
set $workspace8 "      8      "
set $workspace9 "      9      "

bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9

bindsym $mod+Shift+1 move window to workspace $workspace1
bindsym $mod+Shift+2 move window to workspace $workspace2
bindsym $mod+Shift+3 move window to workspace $workspace3
bindsym $mod+Shift+4 move window to workspace $workspace4
bindsym $mod+Shift+5 move window to workspace $workspace5
bindsym $mod+Shift+6 move window to workspace $workspace6
bindsym $mod+Shift+7 move window to workspace $workspace7
bindsym $mod+Shift+8 move window to workspace $workspace8
bindsym $mod+Shift+9 move window to workspace $workspace9

bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

workspace_auto_back_and_forth yes

# media keys and more

bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master 5%+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q set Master 5%- unmute
bindsym XF86AudioMute exec --no-startup-id amixer-toggle-mute

bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master 5%+ unmute; exec --no-startup-id aplay -q "$XDG_CONFIG_HOME/i3/bloop.wav"
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id amixer -q set Master 5%- unmute; exec --no-startup-id aplay -q "$XDG_CONFIG_HOME/i3/bloop.wav"
bindsym Shift+XF86AudioMute exec --no-startup-id amixer-toggle-mute beep

# bindsym XF86AudioPlay exec playerctl play
# bindsym XF86AudioPause exec playerctl pause
# bindsym XF86AudioNext exec playerctl next
# bindsym XF86AudioPrev exec playerctl previous

bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10 -time 1 -steps 1
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10 -time 1 -steps 1

bindsym XF86Search exec --no-startup-id rofi -show window

# resize mode

bindsym $mod+r mode "resize"
mode "resize" {
  bindsym $down resize shrink height 10 px or 5 ppt
  bindsym $left resize grow width 10 px or 5 ppt
  bindsym $right resize shrink width 10 px or 5 ppt
  bindsym $up resize grow height 10 px or 5 ppt

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# mouse stuff

focus_follows_mouse no

# visuals

font pango:Lato Heavy 14

hide_edge_borders both

new_window pixel 3

set $base00 #272822
set $base01 #383830
set $base02 #49483e
set $base03 #75715e
set $base04 #a59f85
set $base05 #f8f8f2
set $base06 #f5f4f1
set $base07 #f9f8f5
set $base08 #f92672
set $base09 #fd971f
set $base0A #f4bf75
set $base0B #a6e22e
set $base0C #a1efe4
set $base0D #66d9ef
set $base0E #ae81ff
set $base0F #cc6633

client.focused $base0E $base0E $base00 $base01
client.focused_inactive $base0E $base0E $base03 $base01
client.unfocused $base00 $base00 $base03 $base01
client.urgent $base02 $base08 $base07 $base08

# bar

bar {
  status_command i3status
  position top
  tray_padding 5
  separator_symbol " "

  colors {
    separator $base03
    background $base01
    statusline $base05
    focused_workspace $base00 $base00 $base07
    active_workspace $base0E $base0E $base07
    inactive_workspace $base01 $base01 $base03
    urgent_workspace $base08 $base08 $base07
  }
}
