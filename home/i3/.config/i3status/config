# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  interval = 1
  color_good = "#f3f4f5"
  color_degraded = "#d3d4d5"
  color_bad = "#f92672"
}

order += "tztime local"
order += "wireless _first_"
order += "battery 0"
order += "volume master"

tztime local {
  align = "center"
  format = " %l:%M%P on %A %Y-%m-%d "
}

wireless _first_ {
  align = "right"
  format_up = " ● %essid "
  format_down = " ○ wifi off "
}

battery 0 {
  align = "right"
  last_full_capacity = true
  hide_seconds = true
  integer_battery_capacity = true
  status_chr = ""
  status_bat = ""
  status_full = ""
  threshold_type = percentage
  low_threshold = 15
  format = " ⚡ %percentage "
}

volume master {
  align = "right"
  format = " ♬ %volume "
  format_muted = " ♬ (%volume)"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}
